@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<br /><br /><br />
<div id="AllTheLinksFitToMuck" class="container d-grid gap-5">

    <div class="row">
        <div class="col-3"></div>
            <a class="btn btn-lg btn-block col-6" style="background-color:rgb(145,70,255)" asp-action="LoginWithTwitch" asp-route-returnUrl="@Model.ReturnUrl">
            <div style="color: rgb(240,240,255); font-family:Roobert,Inter,Helvetica,Arial,sans-serif">
                <img src="~/img/twitch/twitchglitchblackops.png" width="30"/>&nbsp;&nbsp;&nbsp; Connect with Twitch
            </div>
            </a>
        <div class="col-3"></div>
    </div>

    <div class="row">
        <div class="col-3"></div>
            <a class="btn btn-outline-dark btn-lg col-6" asp-action="Login2" asp-route-returnUrl="@Model.ReturnUrl" onclick="return confirm_alert(this);">Use Shared Guest Account</a>
        <div class="col-3"></div>
    </div>
</div>
<br /><br /><br />



@section Scripts {
    <script type="text/javascript">
        function confirm_alert(node) {
            return confirm("The guest account is meant for demo purposes. It is shared between all users using it, I do not recommend using it for tracking a run. Other people's actions will effect your tracker. Do you wish to continue?");
        }
    </script>
}
